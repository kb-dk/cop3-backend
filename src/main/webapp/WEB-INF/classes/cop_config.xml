<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">

<properties>
    <comment>Configuration for cop2_backend.</comment>

    <!-- if some edition is using another template than default make a note here -->
    <entry key="template.danmarksbilleder">danmarksbilleder</entry>
    <!-- name the default template here. currently it is simply "default" -->
    <entry key="template.default">default</entry>
    <!-- base uri for the gui -->
    <entry key="gui.uri">http://localhost:8080/</entry>

    <!-- entry key="cop2_backend.baseurl">http://distest.kb.dk:8080/cop</entry -->
    <entry key="cop2_backend.baseurl">http://localhost:8080/cop</entry>
    <entry key="cop2_solr.baseurl">http://localhost:8983/solr/cop-editions/</entry>
    <entry key="datacontroller.fileCache.dir">/tmp/cop-database/</entry>

    <entry key="datacontroller.updateGeo">true</entry>

    <entry key="datacontroller.updateObjects">true</entry>

    <entry key="datacontroller.updateRelations">true</entry>

    <entry key="datacontroller.updateNavigation">true</entry>

    <entry key="datacontroller.createObject">true</entry>

    <entry key="datacontroller.oracleDb">jdbc:oracle:thin:@oracle-03.kb.dk:1521:STAGE</entry>

    <entry key="datacontroller.oracleUser">COP2</entry>

    <entry key="datacontroller.oraclePasswd">cop2123</entry>

</properties>

